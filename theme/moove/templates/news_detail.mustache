<div class="container-fluid">
    <div class="container">
        <div class="row">
            <div class="col-12 col-md-3 fh5co_padding_menu">
                <a href="{{homeurl}}"><img src="{{#logonews}}{{{logonews}}}{{/logonews}}" alt="img" class="fh5co_logo_width"/>
            </div>
            <div class="col-12 col-md-9 align-self-center fh5co_mediya_right">
                <div class="text-center d-inline-block">
                    <a href="#" target="_blank" class="fh5co_display_table"><div class="fh5co_verticle_middle"><i class="fa fa-youtube"></i></div></a>
                </div>
                <div class="text-center d-inline-block">
                    <a href="#" target="_blank" class="fh5co_display_table"><div class="fh5co_verticle_middle"><i class="fa fa-facebook"></i></div></a>
                </div>
                <!--<div class="d-inline-block text-center"><img src="/theme/moove/images/country.png" alt="img" class="fh5co_country_width"/></div>-->
                <div class="d-inline-block text-center dd_position_relative ">
                    <select class="form-control fh5co_text_select_option">
                        <option><a href=""> VietNam </option>
                        <option> English </option>
                    </select>
                </div>
                {{#hasbtnlogin}}
                {{#btnlogin}}
                <div class="d-inline-block text-center dd_position_relative ">
                    {{{btnlogin}}}
                </div>
                {{/btnlogin}}
                {{/hasbtnlogin}}
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
</div>
{{#coursedata}}
<div id="fh5co-title-box" style="background-image: url({{{backgroundimg}}});" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="page-title">
        {{{useravatar}}}
        <span>{{{time}}}</span>
        <h2>{{{title}}}</h2>
    </div>
</div>
<div id="fh5co-single-content" class="container-fluid pb-4 pt-4 paddding">
    <div class="container paddding">
        <div class="row mx-0">
            <div class="col-md-12 animate-box" data-animate-effect="fadeInLeft">
                {{{content}}}
            </div>
        </div>
    </div>
</div>
<div class="container-fluid pb-4 pt-5">
    <div class="container animate-box">
        <div>
            <div class="fh5co_heading fh5co_heading_border_bottom py-2 mb-4">Tin Mới nhất</div>
        </div>
        <div class="owl-carousel owl-theme" id="slider2">
            {{#hasnewestnews}}
            {{#newestnews}}
            <div class="item px-2">
                <div class="fh5co_hover_news_img">
                    <div class="fh5co_news_img"><img src="{{image}}" alt=""/></div>
                    <div>
                        <a href="{{newsurl}}" class="d-block fh5co_small_post_heading"><span class="">{{subject}}</span></a>
                        <div class="c_g"><i class="fa fa-clock-o"></i> {{timecreated}}</div>
                    </div>
                </div>
            </div>
            {{/newestnews}}
            {{/hasnewestnews}}
        </div>
    </div>
</div>
{{/coursedata}}
<div class="container-fluid fh5co_footer_bg pb-3">
    <div class="container animate-box">
        <div class="row">
            <div class="col-12 spdp_right py-5"><a href="{{homeurl}}"><img src="{{#logonews}}{{{logonews}}}{{/logonews}}" alt="img" class="footer_logo"/></a></div>
            <div class="clearfix"></div>
            <div class="col-12 col-md-4 col-lg-3">
                <div class="footer_main_title py-3"> Giới thiệu</div>
                <div class="footer_sub_about pb-3"> Lorem Ipsum is simply dummy text of the printing and typesetting
                    industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an
                    unknown printer took a galley of type and scrambled it to make a type specimen book.
                </div>
                
            </div>
            <div class="col-12 col-md-3 col-lg-3">
                <div class="footer_main_title py-3"> Tài nguyên</div>
                <ul class="footer_menu">
                    {{#hascoursecategories}}
                    {{#coursecategories}}
                        <li><a href="{{url}}" class=""><i class="fa fa-angle-right"></i>&nbsp;&nbsp; {{name}}</a></li>
                    {{/coursecategories}}
                    {{/hascoursecategories}}
                </ul>
            </div>
            <div class="col-12 col-md-5 col-lg-3 position_footer_relative">
                <div class="footer_main_title py-3"> Xem nhiều nhất </div>
                {{#hasmostviewsnews}}
                {{#mostviewsnews}}
                <div class="footer_makes_sub_font"> {{timecreated}}</div>
                <a href="{{newsurl}}" class="footer_post pb-4 footer_post_portal"> {{subject}} </a>
                {{/mostviewsnews}}
                {{/hasmostviewsnews}}
                <div class="footer_position_absolute"><img src="/theme/moove/images/footer_sub_tipik.png" alt="img" class="width_footer_sub_img"/></div>
            </div>
            <div class="col-12 col-md-12 col-lg-3 ">
                <div class="footer_main_title py-3"> Theo dõi</div>
                <div class="footer_mediya_icon">
                    <div class="text-center d-inline-block"><a class="fh5co_display_table_footer">
                        <div class="fh5co_verticle_middle"><i class="fa fa-facebook"></i></div>
                    </a></div>
                    <div class="text-center d-inline-block"><a class="fh5co_display_table_footer">
                        <div class="fh5co_verticle_middle"><i class="fa fa-youtube"></i></div>
                    </a></div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid fh5co_footer_right_reserved">
    <div class="container">
        <div class="row  ">
            <div class="col-12 col-md-6 py-4 Reserved"> © Copyright 2021, All rights reserved. Design by Vũ. </div>
        </div>
    </div>
</div>
